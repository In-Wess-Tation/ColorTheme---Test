<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ColorTheme___Test</title>

    <script>
        (function () {
            const savedTheme = localStorage.getItem('selectedTheme') || 'lightMode';
            document.documentElement.className = savedTheme;
        })();
    </script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ColorTheme___Test.styles.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]" id="themeBody">
    <header>
        <nav class="navbar navbar-expand-sm mb-3">
            <div class="container">
                <p class="h3 pe-2">
                    <a asp-area="" asp-page="/Index">ColorTheme___Test</a>
                </p>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <a class="ps-2" asp-area="" asp-page="/Index">Home</a>
                    <a class="ps-2" asp-area="" asp-page="/ReserveRoom">Book Lokale</a>
                    <a class="ps-2" asp-area="" asp-page="/Resevations">Dine Bookings</a>

                    <a class="ps-2" asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <h1>Helloooo</h1>
        <p>blablabla</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        window.onload = function () {
            const savedTheme = localStorage.getItem('selectedTheme') || 'lightMode';
            document.body.className = savedTheme;
        };
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>