@section Scripts {
    <script>
        function setTheme(themeName) {
            document.documentElement.className = themeName; // Apply to <html>
            localStorage.setItem('selectedTheme', themeName);
        }

        window.onload = function () {
            const savedTheme = localStorage.getItem('selectedTheme') || 'lightMode';
            document.documentElement.className = savedTheme;
        };
    </script>
}